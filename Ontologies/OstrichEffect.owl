<?xml version="1.0"?>
<rdf:RDF xmlns="http://www.matteoguenci.it/CognitiveBiasOntology/OstrichEffect.owl#"
     xml:base="http://www.matteoguenci.it/CognitiveBiasOntology/OstrichEffect.owl"
     xmlns:dc="http://purl.org/dc/terms/"
     xmlns:owl="http://www.w3.org/2002/07/owl#"
     xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
     xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#">

    <owl:Ontology rdf:about="http://www.matteoguenci.it/CognitiveBiasOntology/OstrichEffect.owl">
        <owl:imports rdf:resource="http://www.ontologydesignpatterns.org/schemas/cpannotationschema.owl"/>
        <dc:title xml:lang="en">Ostrich Effect Ontology</dc:title>
        <rdfs:comment xml:lang="en">An ontology representing the Ostrich Effect as a specific cognitive bias.</rdfs:comment>
    </owl:Ontology>

    <!-- Classes -->
    <owl:Class rdf:about="#CognitiveBias">
        <rdfs:comment xml:lang="en">Parent class for all cognitive biases.</rdfs:comment>
        <rdfs:label xml:lang="en">CognitiveBias</rdfs:label>
    </owl:Class>

    <owl:Class rdf:about="#OstrichEffect">
        <rdfs:subClassOf rdf:resource="#CognitiveBias"/>
        <rdfs:comment xml:lang="en">Represents the specific cognitive bias of avoiding potentially negative but useful information.</rdfs:comment>
        <rdfs:label xml:lang="en">OstrichEffect</rdfs:label>
    </owl:Class>

    <!-- Properties -->
    <owl:ObjectProperty rdf:about="#hasDefinition">
        <rdfs:domain rdf:resource="#CognitiveBias"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
        <rdfs:label xml:lang="en">hasDefinition</rdfs:label>
    </owl:ObjectProperty>

    <owl:ObjectProperty rdf:about="#hasExample">
        <rdfs:domain rdf:resource="#CognitiveBias"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
        <rdfs:label xml:lang="en">hasExample</rdfs:label>
    </owl:ObjectProperty>

    <owl:ObjectProperty rdf:about="#affectsDecisionMaking">
        <rdfs:domain rdf:resource="#CognitiveBias"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
        <rdfs:label xml:lang="en">affectsDecisionMaking</rdfs:label>
    </owl:ObjectProperty>

    <!-- Instances -->
    <owl:NamedIndividual rdf:about="#OstrichEffectInstance">
        <rdf:type rdf:resource="#OstrichEffect"/>
        <rdf:type rdf:resource="#CognitiveBias"/>
        <rdfs:label xml:lang="en">Ostrich Effect Instance</rdfs:label>
        <rdfs:comment xml:lang="en">Meet John, a software developer. John has been working on a project for several months. He’s aware that there are some bugs in his code, but he’s been avoiding looking at the bug reports because he’s afraid of the amount of work it might involve. Even though addressing these bugs could improve the performance of his software, he chooses to focus on adding new features instead. This is an example of the Ostrich Effect, as John is avoiding potentially negative but useful information.</rdfs:comment>
    </owl:NamedIndividual>

    <!-- Relationships -->
    <rdf:Description rdf:about="#OstrichEffectInstance">
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#Class"/>
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#Restriction"/>
        <owl:onProperty rdf:resource="#isA"/>
        <owl:allValuesFrom rdf:resource="#OstrichEffect"/>
    </rdf:Description>

    <rdf:Description rdf:about="#OstrichEffect">
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#Class"/>
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#Restriction"/>
        <owl:onProperty rdf:resource="#isA"/>
        <owl:allValuesFrom rdf:resource="#CognitiveBias"/>
        <rdfs:comment xml:lang="en">The Ostrich Effect is a cognitive bias where people tend to avoid potentially negative but useful information, such as feedback on progress, to avoid psychological discomfort.</rdfs:comment>
    </rdf:Description>

    <rdf:Description rdf:about="#OstrichEffectInstance">
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#Class"/>
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#Restriction"/>
        <owl:onProperty rdf:resource="#hasExample"/>
        <owl:someValuesFrom rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
    </rdf:Description>

    <rdf:Description rdf:about="#OstrichEffect">
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#Class"/>
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#Restriction"/>
        <owl:onProperty rdf:resource="#affectsDecisionMaking"/>
        <owl:someValuesFrom rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
        <rdfs:comment xml:lang="en">The Ostrich Effect can lead individuals to make decisions based on incomplete information, as they avoid confronting potentially negative information.</rdfs:comment>
    </rdf:Description>

</rdf:RDF>
